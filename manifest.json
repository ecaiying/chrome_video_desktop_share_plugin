{
    "name" : "WcyMeet Screen",
    "author": "ecaiying",
    "version" : "2.0",
    "manifest_version" : 2,
    "minimum_chrome_version": "2.0",
    "description" : "WcyMeet Screen QQ:ecaiying@qq.com",
    "homepage_url": "https://vm.wangchuyu.com",
    "background": {
        "scripts": ["background-script.js"],
        "persistent": false
    },
    "content_scripts": [ {
       "js": [ "content-script.js" ],
       "all_frames": true,
       "run_at": "document_end",
       "matches": ["https://*/*"]
    }],
    "icons" : {
        "48" : "icon.png"
    },
    "permissions": [
        "desktopCapture"
    ],
    "web_accessible_resources": [
        "icon.png"
    ]
}